{% extends 'base.html.twig' %}

{% block title %}Posts by Category{% endblock %}

{% block body %}
    <h1>Posts in this Category</h1>
    {% if is_granted('ROLE_ADMIN')%}
    <a href="/post/new" class="btn btn-success">Créer un nouveau post</a>
    {% endif %}
    <div class="row">
            {% for post in posts %}
        <div class="col-3 text-center d-flex align-items-stretch w-25">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <img class="card-img w-100" src="{{ post.picture }}" alt="{{ post.title }}">
                        <a class="btn btn-primary w-100" href="{{ path('post_show', { id: post.id }) }}">Voir détails</a>
                    </div>
                </div>
            </div>
        {% else %}
        <p>No posts found in this category.</p>
        {% endfor %}
    </div>
{% endblock %}